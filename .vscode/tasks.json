{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/opt/homebrew/include",
                "-L/opt/homebrew/lib",
                "-lraylib",
                "-framework",
                "CoreVideo",
                "-framework",
                "IOKit",
                "-framework",
                "Cocoa",
                "-framework",
                "GLUT",
                "-framework",
                "OpenGL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build raylib project"
        },
        {
            "type": "shell",
            "label": "Run raylib project",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "dependsOn": ["C/C++: clang build active file"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Build and run the project"
        }
    ],
    "version": "2.0.0"
}
